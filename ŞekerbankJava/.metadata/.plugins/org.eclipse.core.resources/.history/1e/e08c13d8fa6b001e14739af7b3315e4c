import java.io.FileReader;
import java.io.IOException;

public class Main {
	public static void main(String[] args) {
		
		
	}
	public String word(char seperator) {
		StringBuilder word = new StringBuilder();
		StringBuilder sonuc = new StringBuilder();
		try {
			String file = "";
			// okumak için file reader oluşturduk
			FileReader reader = new FileReader(file);
			// charların değerini tutsun diye int değişkeni
			int charValue;
			while ((charValue=reader.read())!=-1) {
				//Casting yapıypruz karakter ayırıcı seperatöre eşitse append ile ekleme yapıyoruz sonra wordu 0 a eşitliyoruz
				char character= (char) charValue;
				// eğer değer seperatore eşitse wordu stringe çevirip sonuca ekliyoruz
				if (character == seperator) {
					sonuc.append(word.toString()).append(" ");
					word.setLength(0);
					
				}else {
					word.append(character);
				}
				if (word.length()>0) {
					sonuc.append(word.toString());
					
				}
				reader.close();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		return sonuc.toString();
		
		
	}
	public String lines(int Linenumber) {
		try {
			String file="";
			FileReader reader= new FileReader(file);
			StringBuilder line = new StringBuilder();
			int current= 0;
			int charValue;
			while((charValue =reader.read())!=-1) {
				//cast işlemi
				char character= (char) charValue;
				//line a karakter değişkenini ekliyourz
				line.append(character);
				// eğer boşluk karakterine denk gelirsek 0 olan currenti arttırıyoruz
				if (character== '\n') {
					current++;
					//current line number paramatresine eşitse kapatıyoruz veline ı toString ile stringe çeviriyoruz
					if (current == Linenumber) {
						reader.close();
						return line.toString();
						
					}
					// değerini 0 a atıyoruz
					line.setLength(0);
					
				}
			}
			reader.close();
			
		} catch (IOException e) {
			e.printStackTrace();
		}
		return null;
	}

}
